<% if current_user.present? %>
	<%= form_for [@book, @vote] do |f| %>
	  <% 5.times do |i| %>
	    <%= f.radio_button :rating, i+1 %>
	    <% (i+1).times do %>
	      <i style="color:#D17581" class="glyphicon glyphicon-star"></i>
	    <% end %>
	    <br />

	  <% end %>
 
	  <%= f.submit "Vote", class: "btn btn-sm btn-primary" %>
	<% end %>
<% end %>