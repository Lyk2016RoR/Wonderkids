<%@books.each do |books|%>
<%=link_to books.name, book_path(books)%> : </br>
<%=books.description%>  </br>
<%end%>
<% if current_user %>
<%= link_to "favorite",   favorite_recipe_path(@book, type: "favorite"), method: :put %>
<%= link_to "unfavorite", favorite_recipe_path(@book, type: "unfavorite"), method: :put %>
<% end %>
